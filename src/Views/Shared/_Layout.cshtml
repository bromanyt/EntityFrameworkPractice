<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebRetail</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebRetail.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-expand navbar-bg border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <ul class="navbar-nav gap-3">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">WebRetailAnalitycs_v2.0</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Data" asp-action="Index">Data</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Operation" asp-action="Index">Personal Offers</a>
                    </li>
                    <li class="nav-item">
                        @if (Context.User.Identity is not null && Context.User.Identity.IsAuthenticated)
                        {
                        <div class="divAcc text-light">@Context.User.Identity.Name</div>
                            <div class="divAcc"><a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="LogOut">Logout</a></div>
                        }
                        else
                        {
                            <div class="divAcc"><a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Index">Log in</a></div>
                        }
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div>
            &copy; 2023 - WebRetailAnalitycs_v2.0 - by bromanyt, ajhin, dtammie
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
